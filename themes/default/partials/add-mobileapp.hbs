<style>
	/*------FILE UPLOAD-----*/

	.fileupload {
		float: left;
	}

	.fileupload-preview {
		width: 160px;
		height: 240px;
	}

	.thumbnail-images_icon, preview-images_icon {
		width: 160px;
		height: 160px;
	}

	.thumbnail-images_banner, .preview-images_banner  {
		width: 512px;
		height: 160px;
	}
	
	

	.fileupload-image {

	}

	.form-buttons {
		padding-top: 10px;
	}

	.app-icon-small {
		width: 40px;
	}

</style>

<div class="content-div">

	<div class="row-fluid">
		<form class="form-horizontal" id='form-asset-create'>
			<div class="well-small offset9">
				<a class="btn btn-primary" href="#modal-upload" data-toggle="modal">Upload Application</a>
			</div> 
			
			<input type="hidden" id="appmeta" name="appmeta" value="">

			{{#each data.fields}}
			<div class="control-group">
				<b><label class="control-label">{{this.label}}:</label> </b>
				<div class="controls">
					{{#if this.isTextBox}}
					<input id='{{this.name}}' type='text' value='{{this.value}}'/>
					{{/if}}
					{{#if this.isOptions}}
					<select id="{{this.name}}">
						{{#each this.valueList}}
						<option>{{this}}</option>
						{{/each}}
					</select>
					{{/if}}
					{{#if this.isTextArea}}
					<textarea id='{{this.name}}' value='{{this.value}}' ></textarea>															
							{{/if}}
							
							
							
					{{#if this.isFileUpload}}								
							
					<div class="fileupload fileupload-new" data-provides="fileupload">
						<div class="fileupload-new thumbnail thumbnail-{{this.name}}" ></div>
						<div class="fileupload-preview preview-{{this.name}} fileupload-exists thumbnail" ></div>
						<div>
							<span class="btn btn-file"> <span class="fileupload-new">Choose an image</span> <span class="fileupload-exists">Change</span>
								<input type="file" name="foto" id="foto" />
							</span>
							<a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Delete</a>
						</div>
					</div>

					{{/if}}
				</div>
			</div>
			{{/each}}

			
			<div id="saveButtons" class="form-actions">
				<input type="button" value="Create" class="btn btn-primary" name="addNewAssetButton" id="btn-create-asset">
				<input type="hidden" value="{{shortName}}" name="{{shortName}}" id="meta-asset-type">
				<input type="reset" value="Cancel" class="btn">
			</div>
		</form>
	</div>

</div>

<div id="modal-upload" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal"
		aria-hidden="true">
			&times;
		</button>
		<h4>Upload Application</h4>
	</div>
	<div class="modal-body">
		<form>
			<div class="control-group">
				<div class="controls">
					<div class="fileupload fileupload-new" data-provides="fileupload">
						<div class="input-append">
							<div class="uneditable-input span3">
								<i class="icon-file fileupload-exists"></i><span
								class="fileupload-preview"></span>
							</div>
							<span class="btn btn-file" style="width: 20px; height: 20px"><span
								class="fileupload-new"><i class="icon-plus-sign"> </i></span><span
								class="fileupload-exists"><i class="icon-edit"> </i></span>
								<input
								id="txtAppUpload" type="file" name="file"
								data-url="/publisher/api/apps/upload">
							</span><a href="#"
							class="btn fileupload-exists" data-dismiss="fileupload"><i
							class="icon-remove"></i></a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
		<a href="#" id="btn-app-upload" class="btn btn-primary"
		data-dismiss="modal" aria-hidden="true">Upload</a>
	</div>
</div>