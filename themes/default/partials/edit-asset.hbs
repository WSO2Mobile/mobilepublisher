<div class='content-div'>
    <div class="row-fluid">
            <div class="span12 asset-view-container">
                <div class="info-div alert alert-error">
                            <a data-dismiss="alert" class="close">x</a>
                            <i class="icon-warning-sign text-red icon_block"></i>
                            This feature will be available on our next milestone..
                </div>
                <div class="widget wlightblue">
                    <div class="widget-head">
                        <div class="pull-left">Edit Asset - {{{snoop "fields(name=overview_name).value" this.data}}}</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="widget-content">
                        <form class="form-horizontal">
                            {{#each data.fields}}
                                <div class="control-group">
                                    <b><label class="control-label">{{this.label}}:</label></b>
                                    <div class="controls">
                                        <input id='{{this.name}}' type='text' value='{{this.value}}' disabled="disabled"/>
                                    </div>
                                </div>
                            {{/each}}
                            <div id="saveButtons" class="form-actions">
                                <input type="submit" value="Update" class="btn btn-primary"
                                    name="editAssetButton" disabled="disabled" id="editAssetButton">
                                <input type="reset" value="Cancel" disabled="disabled" class="btn">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>