<div class='content-div'>
	<div class="row-fluid">
		<div class="span12 asset-view-container" >
			<div id='msg-container-recent-activity'></div>
			<div class="widget wlightblue">
				<div class="widget-head">
					<div class="pull-left">
						Edit Asset - {{{snoop "fields(name=overview_name).value" this.data}}}
					</div>
					<div class="clearfix"></div>
				</div>
				<div class="widget-content">
					<form class="form-horizontal" id='form-asset-edit'>

						{{#each data.fields}}
						<div class="control-group">
							<b><label class="control-label">{{this.label}}:</label></b>
							<div class="controls">

								{{#if this.isOptions}}
                                    <select id="{{this.name}}" class="span8 selectpicker">
                                    {{#each this.valueList}}
                                        <option>{{this}}</option>
                                    {{/each}}
                                    </select>
                                {{else}}
                                	 {{#if this.isTextArea}}
                                    	<textarea id='{{this.name}}' class="span8">{{this.value}}</textarea>
                               		 {{else}}
                                		<input id='{{this.name}}' name='{{this.name}}' type='text'  class="span8" value='{{this.value}}' {{#unless isEditable}} disabled="true" {{/unless}} {{#if this.isRequired}} required{{/if}}/>
                                	{{/if}}
                                {{/if}}
                                
                               
                                {{#if this.isRequired}}
								<span class="label-required">*</span>
								{{/if}}
							</div>
						</div>
						{{/each}}

						<div class="control-group">
							<b><label class="control-label">Tags: </label></b>
							<div class="controls">
								<input type='text' id='tag-test'>
							</div>
						</div>

						<div id="saveButtons" class="form-actions">
							<input type="button" value="Update" class="btn btn-primary"
							name="editAssetButton"  id="editAssetButton">
							<input type="reset" value="Reset"  class="btn">
							<input type="hidden" value="{{shortName}}" name="{{shortName}}" id="meta-asset-type">
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>

